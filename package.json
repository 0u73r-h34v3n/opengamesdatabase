{
	"name": "opengamesdb",
	"version": "1.0.0",
	"description": "Open Games Database - A collection of games information stored in an opensource space",
	"scripts": {
		"generate": "bun run tools/generate_library_map.ts",
		"validate": "bun run tools/validate_games_metadata.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "bun run lint && bun run validate",
		"prebuild": "bun run check"
	},
	"dependencies": {
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@types/bun": "1.3.4",
		"typescript": "^5.9.3"
	},
	"type": "module",
	"keywords": [
		"games",
		"database",
		"metadata",
		"gaming",
		"opensource"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/0u73r-h34v3n/opengamesdatabase"
	}
}
